    <script type="text/javascript">
		//处理图片显示
        var wimgLI=$('.fengcai li:first').height();
        var winw=$(window).width();
        var winh=$(window).height();
        var scalewh=winw/winh;
        var resetImageWidthAndHeight = function(_obj, _imgObj) {
                _obj.attr('src', _imgObj.src);
                duibi(_obj);
                $(_obj).click(function(){
                    $('.mask').show();
                    $('#bigimg').show();
                    var bigimg=$('#bigimg');
                    bigimg.attr('src',$(_obj).attr('src'));
                    var str='';
                    if(bigimg.width()>bigimg.height()*scalewh){
                        str='position:fixed;width:100%;top:50%;left:0;margin-left:0;z-index:2';
                        bigimg.attr('style',str)
                        bigimg.css('margin-top',-bigimg.height()/2+'px');
                    }else{
                        str='position:fixed;height:100%;left:50%;top:0;margin-top:0;z-index:2';
    
                        bigimg.attr('style',str)
                        bigimg.css('margin-left',-bigimg.width()/2+'px');
                    }
                });
                $('#bigimg,.mask').click(function(){
                    $('#bigimg').hide();
                    $('.mask').hide();
                });
        };
        function duibi(obj){
            if($(obj).width()>$(obj).height()){
                $(obj).css('height','100%').css('margin-left',-($(obj).width()-wimgLI)/2+'px');
            }else{
                $(obj).css('width','100%').css('margin-top',-($(obj).height()-wimgLI)/2+'px');
            }
        }
        
	var imgnum = $('.fengcai img').length;
        $('.fengcai img').each(function(){
            var _self = $(this);
            var _imgObj = new Image();
            _imgObj.onload = function(){
                resetImageWidthAndHeight(_self, _imgObj);
            };
            _imgObj.src = _self.attr('data-src');
        });
    </script>
